<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Dzen Admin</title>
    <%# CDNs are not allowed in admin for security reasons.
    Paths are relative because app will be mounted to /admin %>
    <%# Bootstrap %>
    <link rel="stylesheet" href="css/bootstrap.min.css" >

    <%# Datetimepicker %>
    <script type="text/javascript" src="js/jquery.min.js"></script>
    <script type="text/javascript" src="js/moment.min.js"></script>
    <script type="text/javascript" src="js/daterangepicker.min.js"></script>
    <link rel="stylesheet" type="text/css" href="css/daterangepicker.css" />

    <%# Custom %>
    <link rel="stylesheet" type="text/css" href="css/app.css" />
    <script type="text/javascript" src="js/app.js"></script>
  </head>
  <body>
    <div class="container">
      <div class="forms">
        <div class="container col-sm-9">
          <form class="form-inline" action="/admin/usd" method="POST">
            <label for="usd" class="mr-sm-2">USD:</label>
            <input type="number" name="usdn" class="form-control mb-2 mr-sm-2" id="usd" placeholder="<%=@usd%>">
            <label for="date" class="mr-sm-2">valid thru:</label>
            <input name="usd_time" class="datetime form-control mb-2 mr-sm-2" id="usd_date">
            <input type="hidden" name="offset" class="offset">
            <button type="submit" class="btn btn-primary mb-2">Update</button>
            <div class="divider"></div>
            <button type="submit" class="btn btn-danger mb-2">Remove</button>
          </form>

          <form class="form-inline" action="/action_page.php">
            <label for="eur" class="mr-sm-2">EUR:</label>
            <div class="divider-sm"></div>
            <input type="eur" class="form-control mb-2 mr-sm-2" id="eur" placeholder="<%=@eur%>">
            <label for="date" class="mr-sm-2">valid thru:</label>
            <input type="datepicker" class="datetime form-control mb-2 mr-sm-2" id="date">
            <input type="hidden" name="offset" class="offset">
            <button type="submit" class="btn btn-primary mb-2">Update</button>
            <div class="divider"></div>
            <button type="submit" class="btn btn-danger mb-2">Remove</button>
          </form>

          <form class="form-inline" action="/action_page.php">
            <label for="btc" class="mr-sm-2">BTC:</label>
            <div class="divider-sm"></div>
            <input type="btc" class="form-control mb-2 mr-sm-2" id="btc" placeholder="<%=@btc%>">
            <label for="date" class="mr-sm-2">valid thru:</label>
            <input type="datepicker" class="datetime form-control mb-2 mr-sm-2" id="date">
            <input type="hidden" name="offset" class="offset">
            <button type="submit" class="btn btn-primary mb-2">Update</button>
            <div class="divider"></div>
            <button type="submit" class="btn btn-danger mb-2">Remove</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
